generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  username String
  password String
  joined   DateTime @default(now())
  seen     DateTime @default(now())
  elo      Int      @default(1200)
  bio      String?
}
